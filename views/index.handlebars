<h1>Eat-tha-burger!</h1>

<div class="image">
    <img src="../assets/img/burger.jpg" alt="burger photo" width=200px>
</div>

<div class="box">
    <div class="newBurger">
        <ul>
            {{#each burgers}} 
                {{#unless devoured}} 
                    {{> burger devoured=false}} 
                {{/unless}} 
            {{/each}}
        </ul>
    </div>

    <div class="devBurger">
        <ul>
            {{#each burgers}} 
                {{#if devoured}} 
                    {{> burger devoured=true}} 
                {{/if}} 
            {{/each}}
        </ul>
    </div>
</div>

<div class="form">
    <h2>Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <textarea id="burger" name="burger"checked rows="4" cols="50"></textarea>
        </div>

        <button type="submit">Submit</button>
    </form>
</div>