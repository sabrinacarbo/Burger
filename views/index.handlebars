<h1>Eat-tha-burger!</h1>

<a href="../public/assets/img/burger.jpg"></a>


{{!-- burgers { burger_name devoured } --}}

<ul>
    {{#each burgers}} 
        {{#unless devoured}} 
            {{> burger devoured=false}} 
        {{/unless}} 
    {{/each}}
</ul>


<ul>
    {{#each burgers}} 
        {{#if devoured}} 
            {{> burger devoured=true}} 
        {{/if}} 
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <input type="textarea" id="burger" name="burger" checked>
    </div>

    <button type="submit">Submit</button>
</form>